<div>
  <div>
    <h1>
      Photo #<%= @the_photo.id %> details
    </h1>

    <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_photo/<%= @the_photo.id %>">
          Delete photo
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_photo.user_id %>
      </dd>

      <dt>
        Total likes
      </dt>
      <dd>
        <%= @the_photo.total_likes %>
      </dd>

      <dt>
        Total comments
      </dt>
      <dd>
        <%= @the_photo.total_comments %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_photo.image %>
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @the_photo.location %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit photo
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_photo.user_id %>">
      </div>

      <div>
        <label for="total_likes_box">
          Total likes
        </label>

        <input type="text" id="total_likes_box" name="query_total_likes" value="<%= @the_photo.total_likes %>">
      </div>

      <div>
        <label for="total_comments_box">
          Total comments
        </label>

        <input type="text" id="total_comments_box" name="query_total_comments" value="<%= @the_photo.total_comments %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_photo.image %>">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption" value="<%= @the_photo.caption %>">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location" value="<%= @the_photo.location %>">
      </div>

      <button>
        Update photo
      </button>
    </form>
  </div>
</div>

<hr>
